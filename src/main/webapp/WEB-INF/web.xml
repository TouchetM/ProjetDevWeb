<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>servlet.IndexServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateAndInitTablesServlet</servlet-name>
        <servlet-class>servlet.CreateAndInitTablesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateAndInitTablesServlet</servlet-name>
        <url-pattern>/createAndInitTables</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateFriendRequestServlet</servlet-name>
        <servlet-class>servlet.CreateFriendRequestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateFriendRequestServlet</servlet-name>
        <url-pattern>/createFriendRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteFriendServlet</servlet-name>
        <servlet-class>servlet.DeleteFriendServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteFriendServlet</servlet-name>
        <url-pattern>/deleteFriend</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AcceptFriendRequestServlet</servlet-name>
        <servlet-class>servlet.AcceptFriendRequestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AcceptFriendRequestServlet</servlet-name>
        <url-pattern>/acceptFriendRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CancelFriendRequestServlet</servlet-name>
        <servlet-class>servlet.CancelFriendRequestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CancelFriendRequestServlet</servlet-name>
        <url-pattern>/cancelFriendRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RefuseFriendRequestServlet</servlet-name>
        <servlet-class>servlet.RefuseFriendRequestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RefuseFriendRequestServlet</servlet-name>
        <url-pattern>/refuseFriendRequest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ModifyUserServlet</servlet-name>
        <servlet-class>servlet.ModifyUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ModifyUserServlet</servlet-name>
        <url-pattern>/modifyMyProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myProfileServlet</servlet-name>
        <servlet-class>servlet.myProfileServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>myProfileServlet</servlet-name>
        <url-pattern>/myProfile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>myFriendsServlet</servlet-name>
        <servlet-class>servlet.myFriendsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>myFriendsServlet</servlet-name>
        <url-pattern>/myFriends</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
</web-app>